<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/game_field"
              android:background="@drawable/rectangle_main"
              android:orientation="vertical"
              android:padding="3dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">
        <TextView
                android:layout_width="167dp"
                android:layout_height="105dp"
                android:background="@drawable/score"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_alignParentStart="true"
                android:layout_marginStart="23dp" android:layout_alignParentTop="true" android:layout_marginTop="36dp"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="16dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/cell_0"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_1"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_2"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_3"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/cell_4"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_5"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_6"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_7"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/cell_8"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_9"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_10"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_11"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/cell_12"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_13"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_14"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <TextView
                    android:id="@+id/cell_15"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center">
    </LinearLayout>

</LinearLayout>