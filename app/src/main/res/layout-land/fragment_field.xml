<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/game_field"
              android:background="@drawable/rectangle_main"
              android:orientation="horizontal"
              android:padding="3dp">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="16dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_0"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_1"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_2"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_3"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_4"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_5"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_6"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_7"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_8"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_9"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_10"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_11"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_12"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_13"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_14"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>

            <com.example.the_2048.presentation.views.cell.CellView
                    android:id="@+id/cell_15"
                    style="@style/OneCube"
                    android:layout_margin="3dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>